<Window x:Class="SkillProfi_WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:SkillProfi_WPFClient.Classes"
        xmlns:gl="clr-namespace:System.Globalization;assembly=mscorlib"
        mc:Ignorable="d"
        Title="SkillProfi клиент" 
        WindowStartupLocation="CenterScreen"
        Height="800"
        Width="1100"
        MinHeight="800"
        MinWidth="1100"
        >
    <!--Ресурсы окна-->
    <Window.Resources>
        <i:TextWhishOutHTMLConverter x:Key="HtmlTextConverter" />
        <i:BooleanToVisibilityConverter x:Key="BoolVisibilityConverter" />
        <i:NullToVisibilityConverter x:Key="NullVisibilityConverter" />
        <i:NullStringToVisibilityConverter x:Key="NullStringVisibilityConverter" />
        <BitmapImage x:Key="DefaultImage" UriSource="Images/Default.png"/>
        <i:NoCorrectEmalToVisibilityConverter x:Key="NoCorrectEmalVisibilityConverter"/>
        <i:BidStatusEnumToClolorConverter x:Key="BidStatusEnumColorConverter"/>
        <i:BidStatusEnumToStringConverter x:Key="BidStatusEnumSringConverter"/>
        <i:NullStringToParametrStringConverter x:Key="NullStringToParametrStringConverter"/>
        <Style x:Key="BorderImage">
            <Style.Setters>
                <Setter Property="Border.CornerRadius" Value="13" />
                <Setter Property="Border.MinWidth" Value="100" />
                <Setter Property="Border.MaxWidth" Value="300" />
                <!--Setter Property="Border.BorderBrush" Value="White" /-->
                <Setter Property="Border.BorderThickness" Value="1" />
                <Setter Property="Border.Padding" Value="2" />
                <Setter Property="Border.Background" Value="#dc3545" />
            </Style.Setters>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" MinWidth="150"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="90*" MinWidth="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid VerticalAlignment="Stretch" 
              HorizontalAlignment="Stretch"
              Grid.Row="0"
              Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--Отображение зарегистрированного пользователя-->
            <StackPanel Orientation="Horizontal"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="5"
                        Visibility="{Binding Path=IsAuthorized, Converter={StaticResource BoolVisibilityConverter}}">
                <TextBlock Text="В системе зарегистрирован " FontSize="13"/>
                <TextBlock Text="{Binding Path=AuthorizedName}" FontSize="13" FontWeight = "Bold"/>
            </StackPanel>
            <!--Цитата заголовка-->
            <DockPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="3">
                <TextBlock 
                            TextAlignment="Center"
                            Text="{Binding Path=QuoteInTheHeader}"
                            Margin="5"
                            FontSize="20"
                            FontWeight = "Bold"
                            />
            </DockPanel>
        </Grid>
        
        <!--Меню навигации-->
        <StackPanel Orientation="Vertical"
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="3">            
            
            <StackPanel Visibility="{Binding Path=IsAuthorized, Converter={StaticResource BoolVisibilityConverter}}">
                <Button Margin="5" Command="{Binding Path=ShowDesctopCommand}">
                    <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="Рабочий стол"/>
                </Button>
            </StackPanel>
            <StackPanel>
                <Button Margin="5"
                        Command="{Binding Path=ShowBidPageCommand}">
                    <TextBlock TextAlignment="Center" TextWrapping="Wrap" 
                               Text="{Binding Path=MenuNameAndPageHeaderData.EditObject.MainPage, 
                                        Converter={StaticResource NullStringToParametrStringConverter},
                                        ConverterParameter=Главная}"/>
                </Button>
                <Button Margin="5" Command="{Binding Path=ShowProjectsCommand}">
                    <TextBlock TextAlignment="Center" TextWrapping="Wrap" 
                               Text="{Binding Path=MenuNameAndPageHeaderData.EditObject.ProjectPage, 
                                        Converter={StaticResource NullStringToParametrStringConverter},
                                        ConverterParameter=Проекты}"/>
                </Button>
                <Button Margin="5" Command="{Binding Path=ShowServecesCommand}">
                    <TextBlock TextAlignment="Center" TextWrapping="Wrap" 
                               Text="{Binding Path=MenuNameAndPageHeaderData.EditObject.ServicePage, 
                                        Converter={StaticResource NullStringToParametrStringConverter},
                                        ConverterParameter=Услуги}"/>
                </Button>
                <Button Margin="5" Command="{Binding Path=ShowBlogsCommand}">
                    <TextBlock TextAlignment="Center" TextWrapping="Wrap"
                               Text="{Binding Path=MenuNameAndPageHeaderData.EditObject.BlogPage, 
                                        Converter={StaticResource NullStringToParametrStringConverter},
                                        ConverterParameter=Блог}"/>
                </Button>
                <Button Margin="5"
                        Command="{Binding Path=ShowContactCommand}">
                    <TextBlock TextAlignment="Center" TextWrapping="Wrap" 
                               Text="{Binding Path=MenuNameAndPageHeaderData.EditObject.ContactPage, 
                                        Converter={StaticResource NullStringToParametrStringConverter},
                                        ConverterParameter=Контакты}"/>
                </Button>
            </StackPanel>
            <StackPanel Visibility="{Binding Path=IsAuthorized, Converter={StaticResource BoolVisibilityConverter}}">
                <Button Margin="5" Command="{Binding Path=ShowUserSettingsCommand}">
                    <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="Администрирование пользователей"/>                    
                </Button>                  
                <Button Margin="5"
                        Command="{Binding Path=EditMenuNameAndPageHeaderDataCommand}">
                    <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="Изменение названий меню"/>
                </Button>
                <Button Margin="5"
                        Command="{Binding Path=EditHeaderDescriptionCommand}">
                    <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="Изменение списка цитат заголовка"/>
                </Button>
            </StackPanel>
            <StackPanel>
                <Button Margin="5" Command="{Binding Path=ShowAuthorizationCommand}"
                        Visibility="{Binding Path=IsAuthorized, ConverterParameter=invert, Converter={StaticResource BoolVisibilityConverter}}">
                    <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="Авторизация"/>
                </Button>
                <Button Margin="5" Command="{Binding Path=ExitAuthorizationCommand}"
                        Visibility="{Binding Path=IsAuthorized, Converter={StaticResource BoolVisibilityConverter}}">
                    <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="Выход"/>
                </Button>
            </StackPanel>
        </StackPanel>
        
        <GridSplitter Width="4"
                      Grid.Row="0"
                      Grid.RowSpan="3"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Grid.Column="1"/>
        
        <TabControl 
            x:Name="tcMain"
            Grid.Column="2"
            Grid.Row="1"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            SelectedIndex="{Binding SelectedTabItem}">

            <!--0 Вкладка Добаввить заявку-->
            <TabItem IsTabStop="False"
                Visibility ="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical"
                                Grid.Row="0"
                                HorizontalAlignment="Stretch"
                                Grid.ColumnSpan="2"
                                Visibility="{Binding Path=MenuNameAndPageHeaderData.EditObject.MainPageHeader, Converter={StaticResource NullStringVisibilityConverter}}"
                                >
                        <!--TextBlock FontSize="10" Foreground="Gray" Text="тут будет путь"/-->
                        <!--TODO: добавить visibility при биндинге названия страницы-->
                        <TextBlock FontSize="24" Foreground="Blue" 
                                       Text="{Binding Path=MenuNameAndPageHeaderData.EditObject.MainPageHeader}"/>
                        <Separator Margin="0,15,0,15"/>
                    </StackPanel>
                    <Grid Grid.Row="1"
                          Grid.ColumnSpan="2"
                          Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="150"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.Background>
                            <ImageBrush ImageSource="{Binding Path=BidPageData.EditObject.Image, TargetNullValue={StaticResource DefaultImage}}" />
                        </Grid.Background>
                        <TextBlock
                                Grid.Row="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Text="{Binding Path=BidPageData.EditObject.HeaderImage, Converter={StaticResource HtmlTextConverter}}"
                                FontSize="35"
                                FontWeight="Bold"  
                                TextWrapping="Wrap"
                                Foreground="White"
                                />
                        <Border Style="{StaticResource BorderImage}" 
                                HorizontalAlignment="Right"
                                Grid.Row="1"
                                Margin="15">
                            <TextBlock Text="{Binding Path=BidPageData.EditObject.HeaderButton}"
                                       Margin="10"
                                       FontSize="18"
                                       Foreground="White"
                                       />
                        </Border>
                    </Grid>
                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               Margin="10"
                               FontSize="18"
                               FontWeight="Bold"
                               Text="{Binding Path=BidPageData.EditObject.HeaderForm}"/>
                    <!--Имя-->
                    <StackPanel Orientation="Vertical"
                                Grid.Row="3"
                                Grid.Column="0"
                                HorizontalAlignment="Stretch">
                        <TextBlock
                            Margin="5"
                            Text="Имя"/>
                        <TextBox                           
                            Margin="5"
                            Text="{Binding Path=BidData.EditObject.Name,UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!--email-->
                    <StackPanel Orientation="Vertical"
                                Grid.Row="3"
                                Grid.Column="1"
                                HorizontalAlignment="Stretch">
                        <TextBlock
                            Margin="5"
                            Text="email"/>
                        <TextBox                           
                            Margin="5"
                            Text="{Binding Path=BidData.EditObject.UserEmail, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <TextBlock Grid.Row="4"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Text="Не корректный email!"
                               Foreground="Red"
                               Visibility="{Binding Path=BidData.EditObject.UserEmail, Converter={StaticResource NoCorrectEmalVisibilityConverter}}"
                               />


                    <!--Текст обращения-->
                    <StackPanel Orientation="Vertical"
                                Grid.Row="5"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Stretch">
                        <TextBlock
                            Margin="5"
                            Text="Текст обращения"/>
                        <TextBox  
                                 SpellCheck.IsEnabled="True" Language="ru-ru"
                                 TextWrapping="Wrap"
                                 Height="200"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.CanContentScroll="True"
                                 AcceptsReturn="True"
                                 Margin="5"
                                 Text="{Binding Path=BidData.EditObject.Text, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <Button Content="Отправить"
                            Grid.Row="6"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            ToolTip="Отправить"
                            Background="Blue"
                            Foreground="White"
                            Height="30"                                
                            Width="100"
                            Margin="3"
                            Command="{Binding Path= SendBidCommand}"
                            />
                    <Button Content="Редактировать"
                            Grid.Row="7"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            ToolTip="Редактировать"
                            Background="Blue"
                            Foreground="White"
                            Height="30"                                
                            Width="100"
                            Margin="3"
                            Visibility="{Binding Path=IsAuthorized, Converter={StaticResource BoolVisibilityConverter}}"
                            Command="{Binding Path= EditBidPageCommand}"
                            />
                </Grid>
            </TabItem>
            
            <!--1 Вкладка Редактировать форму заявки-->
            <TabItem IsTabStop="False"
                Visibility ="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical"
                                Grid.Row="0"
                                HorizontalAlignment="Stretch"
                                Grid.ColumnSpan="2"
                                Visibility="{Binding Path=MenuNameAndPageHeaderData.EditObject.MainPageHeader, Converter={StaticResource NullStringVisibilityConverter}}"
                                >
                        <!--TextBlock FontSize="10" Foreground="Gray" Text="тут будет путь"/-->
                        <!--TODO: добавить visibility при биндинге названия страницы-->
                        <TextBlock FontSize="24" Foreground="Blue" 
                                       Text="{Binding Path=MenuNameAndPageHeaderData.EditObject.MainPageHeader}"/>
                        <Separator Margin="0,15,0,15"/>
                    </StackPanel>
                    <Grid Grid.Row="1"
                          Grid.ColumnSpan="2"
                          Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="150"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.Background>
                            <ImageBrush ImageSource="{Binding Path=BidPageData.EditObject.Image , TargetNullValue={StaticResource DefaultImage}}" />
                        </Grid.Background>
                        <TextBox
                                Grid.Row="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Text="{Binding Path=BidPageData.EditObject.HeaderImage, UpdateSourceTrigger=PropertyChanged}"
                                FontSize="35"
                                TextWrapping="Wrap"
                                />
                        <Border Style="{StaticResource BorderImage}" 
                                HorizontalAlignment="Right"
                                Grid.Row="1"
                                Margin="15">
                            <TextBox Text="{Binding Path=BidPageData.EditObject.HeaderButton, UpdateSourceTrigger=PropertyChanged}"
                                       Margin="10"
                                       FontSize="18"
                                       />
                        </Border>
                    </Grid>
                    <Button Content="Выберите изображение"
                            Grid.Row="2"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            ToolTip="Выберите изображение"
                            Background="Blue"
                            Foreground="White"
                            Height="30"                                
                            Width="Auto"
                            Margin="3"
                            Visibility="{Binding Path=IsAuthorized, Converter={StaticResource BoolVisibilityConverter}}"
                            Command="{Binding Path=SelectImageCommand}"
                            CommandParameter="{Binding Path=BidPageData.EditObject}"
                            />
                    <TextBox Grid.Row="3"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               Margin="3,10,3,3"
                               FontSize="18"
                               Text="{Binding Path=BidPageData.EditObject.HeaderForm, UpdateSourceTrigger=PropertyChanged}"/>
                    <!--Имя-->
                    <StackPanel Orientation="Vertical"
                                Grid.Row="4"
                                Grid.Column="0"
                                HorizontalAlignment="Stretch">
                        <TextBlock
                            Margin="5"
                            Text="Имя"/>
                        <TextBox Margin="5" IsReadOnly="True" IsEnabled="False"/>
                    </StackPanel>

                    <!--email-->
                    <StackPanel Orientation="Vertical"
                                Grid.Row="4"
                                Grid.Column="1"
                                HorizontalAlignment="Stretch">
                        <TextBlock
                            Margin="5"
                            Text="email"/>
                        <TextBox                           
                            Margin="5" IsReadOnly="True" IsEnabled="False"/>
                    </StackPanel>

                    <!--Текст обращения-->
                    <StackPanel Orientation="Vertical"
                                Grid.Row="5"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Stretch">
                        <TextBlock
                            Margin="5"
                            Text="Текст обращения"/>
                        <TextBox  
                                 IsReadOnly="True" IsEnabled="False"
                                 SpellCheck.IsEnabled="True" Language="ru-ru"
                                 TextWrapping="Wrap"
                                 Height="150"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.CanContentScroll="True"
                                 AcceptsReturn="True"
                                 Margin="5"/>
                    </StackPanel>
                    <Button Content="Отправить"
                            Grid.Row="6"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            ToolTip="Отправить"
                            Height="30"                                
                            Width="100"
                            Margin="3"
                            IsEnabled="False"
                            />
                    <Button Content="Сохранить"
                            Grid.Row="7"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            ToolTip="Сохранить"
                            Background="Blue"
                            Foreground="White"
                            Height="30"                                
                            Width="100"
                            Margin="3"
                            Visibility="{Binding Path=IsAuthorized, Converter={StaticResource BoolVisibilityConverter}}"
                            Command="{Binding Path= SaveChangeBidPageCommand}"
                            />
                </Grid>
            </TabItem>

            <!--2 Вкладка Рабочий стол-->
            <TabItem IsTabStop="False"
                Visibility ="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--Количество Заявок-->
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0"
                                Margin="5">
                        <TextBlock Text="Всего заявок: "
                                   FontWeight="Bold"
                                   FontSize="18"/>
                        <!--Количество Заявок-->
                        <TextBlock Text="{Binding Path=BidDataSorted.AllBidsCount, TargetNullValue=0}"
                                   FontWeight="Bold"
                                   FontSize="18"/>
                    </StackPanel>
                    
                    <!--Фильтр отображения-->
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                Margin="5"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch">
                        <RadioButton GroupName="Filter"
                                     Margin="5,5,20,5"
                                     IsChecked="{Binding Path=FilterBid[0].IsChecked, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            <RadioButton.Content>
                                <TextBlock
                                    Text="Сегодня"
                                    FontSize="18"
                                    />
                            </RadioButton.Content>
                        </RadioButton>
                        <RadioButton GroupName="Filter"
                                     Margin="5,5,20,5"
                                     IsChecked="{Binding Path=FilterBid[1].IsChecked, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            <RadioButton.Content>
                                <TextBlock
                                    Text="Вчера"
                                    VerticalAlignment="Center"
                                     FontSize="18"/>
                            </RadioButton.Content>
                        </RadioButton>
                        <RadioButton GroupName="Filter"
                                     Margin="5,5,20,5"
                                     IsChecked="{Binding Path=FilterBid[2].IsChecked, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            <RadioButton.Content>
                                <TextBlock
                                    Text="Неделя"
                                     FontSize="18"/>
                            </RadioButton.Content>
                        </RadioButton>
                        <RadioButton GroupName="Filter"
                                     Margin="5,5,20,5"
                                     IsChecked="{Binding Path=FilterBid[3].IsChecked, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            <RadioButton.Content>
                                <TextBlock
                                    Text="Месяц"
                                     FontSize="18"/>
                            </RadioButton.Content>
                        </RadioButton>
                        <RadioButton GroupName="Filter"
                                     Margin="5,5,20,5"
                                     IsChecked="{Binding Path=FilterBid[4].IsChecked, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            <RadioButton.Content>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <TextBlock Text="с" 
                                               FontSize="18"
                                               Margin="3,0,10,0"/>
                                    <DatePicker IsTodayHighlighted="True"
                                                FirstDayOfWeek="Monday"
                                                SelectedDate = "{Binding Path=FilterBid[4].DateFrom, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                    <TextBlock Text="по" 
                                               Margin="10,0,10,0"
                                               FontSize="18"/>
                                    <DatePicker IsTodayHighlighted="True"
                                                FirstDayOfWeek="Monday"
                                                SelectedDate = "{Binding Path=FilterBid[4].DateUpTo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </StackPanel>
                            </RadioButton.Content>
                        </RadioButton>
                        <Button Content="Обновить"
                            Grid.Row="2"
                            Grid.Column="0"
                            ToolTip="Обновить"
                            Background="Blue"
                            Foreground="White"
                            Height="30"                                
                            Width="100"
                            Margin="3"
                            Visibility="{Binding Path=IsAuthorized, Converter={StaticResource BoolVisibilityConverter}}"
                            Command="{Binding Path=RefreshDesctopDataCommand}"
                            />
                    </StackPanel>
                    
                    <!--Количество заявок в запросе-->
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="2"
                                Margin="5">
                        <TextBlock Text="За указанный период поступило заявок: "
                                   FontSize="18"/>
                        <!--Количество Заявок в запросе-->
                        <TextBlock Text="{Binding Path=BidDataSorted.Bids.Count, TargetNullValue=0}"
                                   FontSize="18"/>
                    </StackPanel>
                    
                    <!--Таблица заявок-->
                    <DataGrid   
                            Grid.Row="3"
                            AutoGenerateColumns="false"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Margin="5"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserReorderColumns="False"
                            SelectionMode="Single"
                            VerticalScrollBarVisibility="Auto"
                            ItemsSource ="{Binding Path=BidDataSorted.Bids }"
                            MinRowHeight="30"><!--SelectedItem="{Binding Path=BidData.SelectedItem}"-->
                        <DataGrid.Resources>
                            <Style x:Key="WrappedColumnHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock TextWrapping="Wrap" 
                                                       FontWeight="Bold" 
                                                       Text="{Binding}"/>
                                        </DataTemplate>
                                    </Setter.Value>                                    
                                </Setter>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>

                            <Style TargetType="TextBlock" x:Key="WrapTextJustify">
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="TextAlignment" Value="Justify"/>
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                            <Style TargetType="TextBlock" x:Key="WrapTextCenter">
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn 
                                                Header="Номер заявки"
                                                IsReadOnly="True"
                                                MinWidth="50"
                                                Width="Auto"                                
                                                ElementStyle="{StaticResource WrapTextCenter}"
                                                HeaderStyle="{StaticResource WrappedColumnHeaderStyle}"
                                                Binding="{Binding Path=Id}"
                                                />
                            <DataGridTextColumn 
                                                Header="Время заявки"
                                                IsReadOnly="True"
                                                MinWidth="100"
                                                Width="Auto"
                                                ElementStyle="{StaticResource WrapTextCenter}"
                                                HeaderStyle="{StaticResource WrappedColumnHeaderStyle}"
                                                Binding="{Binding Path=Date, StringFormat=dd.MM.yyyy HH:mm:ss}"/>
                            <DataGridTextColumn 
                                                Header="Имя"
                                                IsReadOnly="True"
                                                MinWidth="100"
                                                Width="Auto" 
                                                ElementStyle="{StaticResource WrapTextCenter}"
                                                HeaderStyle="{StaticResource WrappedColumnHeaderStyle}"
                                                Binding="{Binding Path=Name}"/>
                            <DataGridTextColumn 
                                                Header="Текст заявки"
                                                IsReadOnly="True"
                                                MinWidth="100"
                                                Width="*"
                                                ElementStyle="{StaticResource WrapTextJustify}"
                                                HeaderStyle="{StaticResource WrappedColumnHeaderStyle}"
                                                Binding="{Binding Path=Text}" >

                            </DataGridTextColumn>
                            <DataGridTextColumn 
                                                Header="Контакты"
                                                IsReadOnly="True"
                                                MinWidth="100"
                                                Width="Auto"
                                                ElementStyle="{StaticResource WrapTextCenter}"
                                                HeaderStyle="{StaticResource WrappedColumnHeaderStyle}"
                                                Binding="{Binding Path=UserEmail}"/>
                            <DataGridTemplateColumn 
                                                Header="Статус"
                                                IsReadOnly="True"
                                                MinWidth="100"
                                                Width="Auto"
                                                HeaderStyle="{StaticResource WrappedColumnHeaderStyle}"                                
  >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DockPanel Background="{Binding BidStatus, Converter={StaticResource BidStatusEnumColorConverter}}">
                                            <TextBlock VerticalAlignment="Center"
                                                       HorizontalAlignment="Stretch"
                                                       TextWrapping="Wrap"
                                                       TextAlignment="Center"
                                                       Text="{Binding Path=BidStatus, Converter={StaticResource BidStatusEnumSringConverter}}"/>
